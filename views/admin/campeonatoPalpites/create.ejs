<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/homeNavbar.ejs')%>

<div class="container">
    <br>
    <br>
    <hr>
    <div class="card mt-5">
        <div class="card-header bg-dark">
            <h2>Criação de Campeonato de Palpites</h2>
        </div>
        <div class="card-body bg-orange-total">
            <form action="/campeonato-palpites/create" method="POST">
                <input class="form-control" name="campeonatoPalpite" placeholder="Informe o nome do Campeonato de Palpites"><br>
                <select id="campeonato" name="campeonato" class="form-control">
                    <% campeonatos.forEach((campeonato)=>{ %>
                        <option value="<%= campeonato.id %>"><%= campeonato.Campeonato +" - "+ campeonato.Divisao +" - "+ campeonato.Ano %></option>
                    <% }) %>
                </select>
                <br>
                <button type="submit" class="btn btn-success btn-block">Criar</button>
            </form>
        </div>
    </div>
</div>

