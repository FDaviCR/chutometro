<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/homeNavbar.ejs')%>

<br>
<div class="dist">
    <a class="btn btn-info" href="/">Voltar</a>
</div>
<div class="container">
    <hr>
    <h2>Campeonatos de Palpites</h2>
    <hr>
    <a class="btn btn-success" href="/admin/campeonato-palpites/create">Criar novo campeonato de palpites</a>
    <hr>
    <table class="table table-bordered bg-gray">
        <thead>
            <tr>
                <th>Id</th>
                <th>Campeonato</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% campeonatos.forEach(campeonato=>{ %>
                <tr>
                    <th><%= campeonato.id %></th>
                    <th><%= campeonato.apelido %></th>
                    <th>
                        <% if( campeonato.ativo === true){ %>
                            <form method="POST" action="/tabela-palpites" style="display: inline;" onsubmit="confirmarInativacao(event, this)">
                                <input type="hidden" id="idCampeonato" name="idCampeonato" value="<%= campeonato.id %>">
                                <button class="btn btn-success">Adicionar Usuários</button>
                            </form>
                        <% } %>
                    </th>
                </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs')%>

<script>
    function confirmarInativacao(event, form){
        event.preventDefault();
        var decision = confirm("Deseja adicionar novos participantes?");
        if(decision){
            form.submit();
        }else{
            console.log("Foi um acidente");
        }
    }
</script>
